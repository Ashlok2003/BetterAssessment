{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",
    "rootDirs": [
      "./src",
      "./tests"
    ],
    /* Environment Settings */
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "ES2022"
    ],
    "types": [
      "node",
      "jest",
      "mocha",
    ],
    /* Output */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    /* Type Checking */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    /* Module / Import Behavior */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    /* Performance */
    "skipLibCheck": true,
    /* Optional: Path Aliases for cleaner imports */
    "baseUrl": "./src",
    "paths": {
      "*": [
        "*"
      ]
    }
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
  ]
}
